{
    "env": {
        "browser": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "eqeqeq": "off",
        "curly": "warn",
        "quotes": [
            "warn",
            "double"
        ],
        "import/extensions": [
            0,
            "never"
        ]
    },
    "settings": {
        "import/resolver": {
            "typescript": {},
            "node": {
                "extensions": [".js", ".jsx", ".ts", ".tsx"
                ],
                "moduleDirectory": ["node_modules", "src/"]
            }
        }
    }
}
